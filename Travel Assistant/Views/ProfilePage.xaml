<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Travel_Assistant.Views.ProfilePage">
    <ContentPage.Content>
        <StackLayout Spacing="20">
            <Grid Padding="10, 50, 0, 0" VerticalOptions="Center" RowSpacing="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Text="Informatii Cont" HorizontalOptions="Start" VerticalOptions="Center" FontSize="Medium" />
                <Label Grid.Row="1" Grid.Column="0" Text="Adaugare Legitimatie"  HorizontalOptions="Start" VerticalOptions="Center" FontSize="Medium" >
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnDisplayBadgeMenuClicked" NumberOfTapsRequired="1"/>
                    </Label.GestureRecognizers>
                </Label>


            </Grid>

            <Button Text="Log Out" Command="{Binding LogOutCommand}" HorizontalOptions="Center" VerticalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>